@using System.Threading.Tasks
@using Admin.Web.ViewComponents

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="/Admin.Web/dist/vendor.css" asp-append-version="true" />
    <environment names="Staging,Production">
        <link rel="stylesheet" href="/Admin.Web/dist/site.css" asp-append-version="true" />
    </environment>

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <link href="/Admin.Web/vendors/custom/fullcalendar/fullcalendar.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/Admin.Web/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/Admin.Web/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="/Admin.Web/demo/default/media/img/logo/favicon.ico" />
</head>

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">

    <script src="/Admin.Web/dist/vendor.js" asp-append-version="true"></script>

    <script src="/Admin.Web/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="/Admin.Web/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <script src="/Admin.Web/vendors/custom/fullcalendar/fullcalendar.bundle.js" type="text/javascript"></script>
    <script src="/Admin.Web/app/js/dashboard.js" type="text/javascript"></script>

    @RenderBody()

    @await Component.InvokeAsync("ClientAppSettings")

    @RenderSection("scripts", required: false)
</body>

</html>
